{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "commonjs": true
  },
  "globals": {
    "$im": "readonly",
    "$variable": "writable",
    "$constant": "readonly",
    "module": "writable",
    "exports": "writable",
    "require": "readonly"
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 5,
    "sourceType": "script"
  },
  "rules": {
    "strict": "off",
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-undef": "error",
    "no-var": "off",
    "prefer-const": "off",
    "func-style": ["error", "declaration"],
    "max-len": ["warn", { "code": 100 }],
    // "camelcase": "error",
    "no-array-constructor": "error",
    "no-new-object": "error",
    "no-new-func": "error",
    "no-param-reassign": "warn",
    "no-return-assign": "error",
    "wrap-iife": ["error", "any"],
    "yoda": "error"
  },
  "ignorePatterns": ["*.test.js", "**/bm/**"]
}
